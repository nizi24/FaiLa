.row
  .col-md-3.bg-light.user-info
    =image_tag 'default_icon.jpeg', size: '80x80', id: 'user-show'
    %h3#user-name= @user.name
    - if identification
      =link_to 'ユーザー情報を編集する', edit_user_path(@user), class: 'btn btn-success btn-sm text-nowrap font-weight-bold edit-user-info'
  .col-md-6
    %h3.center 投稿一覧
    = render 'shared/article_index'
